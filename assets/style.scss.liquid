$fadeOff: left 0s 0.4s, opacity 0.4s;
$fadeOn: left 0s, opacity 0.4s;

/* Colors */
--color-primary: {{ settings.color_primary }};
--color-secondary: {{ settings.color_secondary }};
--color-text: {{ settings.color_text }};
--color-accent: {{ settings.color_accent }};

/* Fonts */
--font-heading: "{{ settings.font_heading }}", sans-serif;
--font-body: "{{ settings.font_body }}", sans-serif;

/* Spacing */
--spacing-xs: {{ settings.spacing_xs }}px;
--spacing-sm: {{ settings.spacing_sm }}px;
--spacing-md: {{ settings.spacing_md }}px;
--spacing-lg: {{ settings.spacing_lg }}px;
--spacing-xl: {{ settings.spacing_xl }}px;

/* Border */
--border-radius: {{ settings.border_radius }}px;
--border-width: {{ settings.border_width }}px;

/* Breakpoints */
--breakpoint-xs: 576px;
--breakpoint-sm: 768px;
--breakpoint-md: 992px;
--breakpoint-lg: 1200px;


--h1-font-size: 3rem;
  --h1-font-weight: bold;
  --h1-line-height: 1.2;
  --h1-letter-spacing: 0;
  --h1-margin-bottom: 1rem;

  --h2-font-size: 2.5rem;
  --h2-font-weight: bold;
  --h2-line-height: 1.2;
  --h2-letter-spacing: 0;
  --h2-margin-bottom: 1rem;

  --h3-font-size: 2rem;
  --h3-font-weight: bold;
  --h3-line-height: 1.2;
  --h3-letter-spacing: 0;
  --h3-margin-bottom: 1rem;

  --h4-font-size: 1.5rem;
  --h4-font-weight: bold;
  --h4-line-height: 1.2;
  --h4-letter-spacing: 0;
  --h4-margin-bottom: 1rem;

  --h5-font-size: 1.25rem;
  --h5-font-weight: bold;
  --h5-line-height: 1.2;
  --h5-letter-spacing: 0;
  --h5-margin-bottom: 1rem;

  --h6-font-size: 1rem;
  --h6-font-weight: bold;
  --h6-line-height: 1.2;
  --h6-letter-spacing: 0;
  --h6-margin-bottom: 1rem;


  /* Padding */
.padding-xs {
  padding: var(--spacing-xs);
}

.padding-sm {
  padding: var(--spacing-sm);
}

.padding-md {
  padding: var(--spacing-md);
}

.padding-lg {
  padding: var(--spacing-lg);
}

.padding-xl {
  padding: var(--spacing-xl);
}


/* Margin */
.margin-xs {
  margin: var(--spacing-xs);
}

.margin-sm {
  margin: var(--spacing-sm);
}

.margin-md {
  margin: var(--spacing-md);
}

.margin-lg {
  margin: var(--spacing-lg);
}

.margin-xl {
  margin: var(--spacing-xl);
}

--font-size-xxs: 0.75rem;
--font-size-xs: 0.875rem;
--font-size-sm: 1rem;
--font-size-md: 1.125rem;
--font-size-lg: 1.25rem;
--font-size-xl: 1.5rem;
